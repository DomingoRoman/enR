# agrupadas las correlaciones en cuatro grupos

corres_a_f <- c(cor_a, cor_b, cor_c, cor_d, cor_e, cor_f, cor_g)
corres_g_l <- c(cor_h, cor_i, cor_j, cor_k, cor_l, cor_m, cor_n)
corres_m_r <- c(cor_o, cor_p, cor_q, cor_r, cor_s, cor_t, cor_u)
corres_s_y <- c(cor_v, cor_x, cor_y, cor_z, cor_ab, cor_ac)

otra <- c(corres_a_f, corres_g_l, corres_m_r, corres_s_y)
otra_2 <- sort(otra)
# GrÃ¡ficas
