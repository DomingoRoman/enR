# Datos tomados de vocales repetidas

data <- read.csv("http://domingo-roman.net/velocidad.csv")

feme <- subset(data, sex=="f")
masc <- subset(data, sex =="h")

x_feme <- mean(feme[,2])
x_masc <- mean(masc[,2])
xs <- c(x_masc,x_feme)
par(mfrow=c(1,1))
boxplot(masc[,2], feme[,2], main ="Velocidad (f/seg) hombres y mujeres", col = "grey95", xlab="sexo",xaxt="n")
axis(1, at = c(1:2), cex.axis=1)
par(new=T)
points((xs), col ="blue",type="o", lty=2, pch="X")

hombres <- masc[,2]
mujeres <- feme[,2]

par(mfrow=c(1,2))
hist(hombres, col = "blue", main = "Hist. velocidad hombres", ylim=c(1,8))
abline(v=x_masc, lty=2)

hist(mujeres, col = "pink", main = "Hist. velocidad mujeres", ylim=c(1,8))
abline(v=x_feme, lty=2)
